doctype html
html(lang="en")
  head
    block head
      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
      meta(name="viewport", content="width=device-width")
      title
        block title
          = locals.name
      link(rel="alternate", href=locals.url+"/feed.xml", type="application/rss+xml", title=locals.description)
      link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather+Sans:400,700,300")
      link(rel="stylesheet", href=contents.styles["main.less"].url)

      //
        HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
        WARNING: Respond.js doesn't work if you view the page via file://
      <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
      <![endif]-->

  body
    .container
      .row
        sidebar.col-md-4
          h1
            a(href=locals.url)= locals.name
          p= locals.description

          ul.nav(data-spy="affix", data-offset-top="40", data-offset-bottom="200")
            li
              a(href="#introduction") Introduction
            li
              a(href="#about") About Us
            li
              a(href="#proposal") Our Proposal
        
        content.col-md-8
          h1#introduction.page-header Introduction
          != contents["intro.md"].html

          h1#about.page-header About Us
          != contents["about.md"].html

          h1#proposal.page-header Our Proposal
          != contents["proposal.md"].html

          // ceremony and reception
          // weddingparty
          // guest information
          // schedule of events
          // map of events
          // things to do in the area
          // photo album
          // our registries

      footer.row
        section.copy
          p &copy; #{ new Date().getFullYear() } #{ locals.owner }
    
    script(src=contents.scripts["jquery.min.js"].url)
    script(src=contents.scripts["bootstrap.min.js"].url)
